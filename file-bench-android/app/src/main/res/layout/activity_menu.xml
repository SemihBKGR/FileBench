<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:focusableInTouchMode="true"
        tools:context=".activity.MenuActivity">

    <ImageButton
            android:id="@+id/uploadBenchButton"
            android:src="@drawable/upload"
            android:layout_width="125dp"
            android:layout_height="100dp"
            android:padding="10dp"
            android:adjustViewBounds="true"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"/>

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/background_layout_bench_id"
            android:gravity="center"
            android:layout_marginTop="50dp"
            android:layout_gravity="center">

        <EditText
                android:textSize="45sp"
                android:id="@+id/benchIdEditText"
                android:layout_width="200dp"
                android:layout_height="75dp"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="7"
                android:background="@drawable/background_edit_text_bench_id"
                android:ems="10"/>

        <ImageButton
                android:id="@+id/downloadBenchButton"
                android:layout_gravity="center"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:padding="10dp"
                android:src="@drawable/download_active"
                android:background="@android:color/transparent"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"/>

    </LinearLayout>


</LinearLayout>